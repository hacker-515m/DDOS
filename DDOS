bash star
echo -e "\e[32m nm                                             
            *@@@***@@m  *@@@***@@m    mm@**@@m   m@***@m@
              @@    *@@m  @@    *@@mm@@*    *@@mm@@    *@
              @@     *@@  @@     *@@@@*      *@@*@@@m    
