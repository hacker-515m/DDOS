echo "                 ✩░▒▓▆▅▃▂▁𝐄𝐠𝐲𝐩𝐭𝐢𝐚𝐧 𝐟𝐫𝐨𝐦 𝐒𝐨𝐡𝐚𝐠 𝐚𝐧𝐝 𝐩𝐫𝐨𝐮𝐝▁▂▃▅▆▓▒░✩"
read -p 'Enter URL website > '
for ((i=4000; i>=0; i--)); do
  if [ $((RANDOM % 2)) -eq 0 ]; then
    echo -e "Done \e[31m$i"  
  else
    echo -e "Done \e[32m$i"  
  fi
  sleep 0.8
done
